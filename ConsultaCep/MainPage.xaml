<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsultaCep.MainPage">

    <StackLayout BackgroundColor="Black" Padding="30" Spacing="50">
        <Image Source="mapPoint.png" ScaleX="0.75" ScaleY="0.75" x:Name="Logo"/>
        <Entry Placeholder="Digite aqui o CEP" x:Name="CEP"/>
        <Button Text="Buscar"  TextColor="Black" BackgroundColor="Aqua" x:Name="Botao"/>
        <Label Text=""
               VerticalOptions="Center"
               HorizontalOptions="FillAndExpand" x:Name="Resultado"/>
    </StackLayout>

</ContentPage>
